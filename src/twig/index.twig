  {# Логотипы и названия Top Gainer/Loser #}
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tops = {
        loser: {
          symbol: '{{ page.market_tops.loser_ticker|e("js") }}',
          logo: document.querySelector('[data-role="loser-logo"]'),
          nameEl: document.querySelector('[data-role="loser-name"]'),
        },
        gainer: {
          symbol: '{{ page.market_tops.gainer_ticker|e("js") }}',
          logo: document.querySelector('[data-role="gainer-logo"]'),
          nameEl: document.querySelector('[data-role="gainer-name"]'),
        },
      };

      const toUpper = (symbol) =>
        typeof symbol === 'string' ? symbol.trim().toUpperCase() : '';

      Object.values(tops).forEach(({ symbol, logo }) => {
        const upper = toUpper(symbol);
        if (!logo || !upper) return;
        logo.src = `/images/coins/${upper}.png`;
        logo.alt = upper;
      });

      const appConfig = window.APP_CONFIG || {};
      const isLocalHost =
        window.location.hostname === 'localhost' ||
        window.location.hostname.endsWith('.local') ||
        window.location.hostname === '127.0.0.1';
      const isDevelopment = appConfig.isDevelopment === true || isLocalHost;

      const langAttr = document.documentElement.lang || '';
      const langPrefix = /^[a-z]{2}$/i.test(langAttr)
        ? `${langAttr.slice(0, 2).toLowerCase()}/`
        : '';

      const params = new URLSearchParams();
      params.append('jsonfather', 'true');

      const requestUrl = isDevelopment
        ? appConfig.devApiUrl ||
          `${appConfig.assetsBasePrefix || ''}/assets/data/fixtures/crypto-data.json`
        : `${window.location.origin}/${langPrefix}json/trindxrating`;

      const requestOptions = isDevelopment
        ? { method: 'GET' }
        : {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            credentials: 'include',
            body: params.toString(),
          };

      fetch(requestUrl, requestOptions)
        .then((response) => {
          if (!response.ok) {
            throw new Error(`status ${response.status}`);
          }
          return response.json();
        })
        .then((raw) => {
          const payload =
            Array.isArray(raw) &&
            raw.length >= 2 &&
            raw[0] === 'OK' &&
            typeof raw[1] === 'object'
              ? raw[1]
              : raw;

          Object.values(tops).forEach(({ symbol, logo, nameEl }) => {
            const upper = toUpper(symbol);
            if (!upper) return;
            const candidate =
              (payload && (payload[upper] || payload[upper.toLowerCase()])) || {};
            const displayName =
              candidate && typeof candidate === 'object' && candidate.name
                ? candidate.name
                : upper;

            if (logo) {
              logo.alt = displayName;
            }
            if (nameEl) {
              nameEl.textContent = displayName;
            }
          });
        })
        .catch((error) => console.error('[home] failed to load asset names', error));
    });
  </script>


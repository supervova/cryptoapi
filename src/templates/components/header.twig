<nav class="e-navbar">
  <div class="e-container">
    <a class="e-navbar__logo" href="/">
      <picture>
        <source
          media="(max-width: 767px)"
          srcset="/assets/img/components/logo/cryptoapi-logo-mobile.svg"
          type="image/svg+xml">
        <source
          media="(max-width: 1023px)"
          srcset="/assets/img/components/logo/cryptoapi-logo-tablet.svg"
          type="image/svg+xml">
        <img
          src="/assets/img/components/logo/cryptoapi-logo-desktop.svg"
          alt="{{ site.title[lang] }}">
      </picture>
      <span class="e-navbar__tagline">
        <span class="tablet:d-none">{{ data_labels.tagline.mobile[lang] }}</span>
        <span class="d-none tablet:d-inline tablet-l:d-none">{{ data_labels.tagline.tablet[lang] }}</span>
        <span class="d-none tablet-l:d-inline">{{ data_labels.tagline.laptop[lang] }}</span>
      </span>
    </a>

    <ul class="e-navbar__menu">
      {% for key, item in data_navbar %}
        {% if item.children is not defined %}
          <li class="e-navbar__menu-item is-{{ key }}{% if item.classes %} {{ item.classes }}{% endif %}">
            <a href="{% if key != 'home' %}/{{ lang }}{% endif %}{{ item.href }}">
              {{ icon(item.icon) }}
              <span class="e-navbar__menu-label">
                {{ item.label[lang] }}
              </span>
            </a>
          </li>
        {% else %}
          <li class="e-navbar__menu-item is-{{ key }}">
            <div class="e-popover" data-role="popover">
              <div data-role="popover-summary">
                {{ icon(item.icon) }}
                <span class="e-navbar__menu-label" id="navbar-more-title">
                  {{ item.label[lang] }}
                </span>
              </div>
              <ul class="e-popover__body e-menu" aria-labelledby="navbar-more-title">
                {% for sub_key, sub_item in item.children %}
                  <li class="e-menu__item is-{{ sub_key }}">
                    <a href="{{ sub_item.href }}">
                      {{ icon(sub_item.icon) }}
                      <span class="e-menu__label">
                        {{ sub_item.label[lang] }}
                      </span>
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>

    <button class="e-btn e-navbar__sign-in" type="button" aria-label="{{ data_labels.sign_in[lang] }}" data-target="modal-login">
      {{ icon('user') }}
      <span class="e-navbar__menu-label d-none tablet:d-inline">{{ data_labels.sign_in[lang] }}</span>
    </button>

    {# <form class="e-navbar__search" role="search">
      <input type="search" placeholder="Поиск" />
      <button type="submit">Найти</button>
    </form> #}
  </div>
</nav>
